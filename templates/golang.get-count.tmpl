{{- define "signature" -}}
Count{{ .Suffix }}({{ param .Args }}) (count int64, err error)
{{- end -}}

{{- define "body" }}{
	const __stmt=`{{ .SQL }}`
	obj.logStmt(__stmt, {{ arg .Args }})

	err = obj.driver.QueryRow(__stmt, {{ arg .Args }}).Scan(&count)
	if err != nil {
		return 0, WrapErr(err)
	}

	return count, nil
}
{{ end -}}
