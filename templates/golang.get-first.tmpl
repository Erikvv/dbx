{{- define "signature" -}}
First_{{ .Suffix }}({{ ctxparam .Args }}) (
	{{ param .Row }}, err error)
{{- end -}}

{{- define "invoke" -}}
First_{{ .Suffix }}({{ ctxarg .Args }})
{{- end -}}

{{- define "body" }}{
	const __stmt={{ printf "%q" .SQL }}
	obj.logStmt(__stmt, {{ fieldvalue .Args }})

	__rows, err := obj.driver.Query(__stmt, {{ fieldvalue .Args}})
	if err != nil {
		return nil, obj.makeErr(err)
	}
	defer __rows.Close()

	if !__rows.Next() {
		if err := __rows.Err(); err != nil {
			return nil, obj.makeErr(err)
		}
		return nil, nil
	}

	{{ init .Row }}
	err = __rows.Scan({{ addrof (flatten .Row) }})
	if err != nil {
		return nil, obj.makeErr(err)
	}

	return {{ arg .Row }}, nil
}
{{ end -}}
